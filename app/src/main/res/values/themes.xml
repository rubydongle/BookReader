    <!-- Base application theme. -->
    <style name="Theme.ComicReader" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:homeAsUpIndicator">@drawable/bg_big_border</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.NaviDrawerActivity.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.NaviDrawerActivity.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="MyToolbarTheme" parent="Widget.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/lightest</item>
        <item name="colorControlNormal">@color/lightest</item>
    </style>

